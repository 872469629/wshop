<!--pages/fxdd/fxdd.wxml-->
<view>
  <view class='team-two'>
    <view class='one'>
      <view class='right'>
        <text class="{{active == '-1' ?'on':''}}" data-active="-1" bindtap='qh'>所有订单</text>
        <text class="{{active == 1 ?'on':''}}" data-active="1" bindtap='qh'>待发货订单</text>
        <text class="{{active == -2 ?'on':''}}" data-active="-2" bindtap='qh'>已付款订单</text>
        <text class="{{active == 5 ?'on':''}}" data-active="5" bindtap='qh'>已完成订单</text>
      </view>
    </view>
    <view class='two'>
      <view>
        <view class='order-two' wx:for="{{orderList}}">
          <view class='order-two-box'>
            <view class='left'>
              <image src='http://zq2.51wdxh.com/jt-img/sp.png'></image>
            </view>
            <view class='right'>
              <text class='title'>军太水光气垫bb霜</text>
              <text class='con'>非常好的水光气垫bb霜，值得推荐</text>
              <view class='right'>
                <text class='price'>1100元</text>
                <text class='value'>x3</text>
              </view>
            </view>

          </view>

          <view class='bottom'>
            <view class='bottom-1'>
              共三件商品, 总计:
              <text style='color:#e2827d'>￥2000.00</text>
            </view>
            <view class='bottom-2'>
              <text class='pay'>以付款</text>
            </view>
            <view class='bottom-3'>
              <view class='bottom-3-image'>
                <image src='http://img4.imgtn.bdimg.com/it/u=2376009099,602665497&fm=214&gp=0.jpg'></image>
              </view>
              <view class='bottom-3-box'>
                <text class='t1'>我的合伙人一号</text>
                <text class='t2'>ID：125623</text>
                <text class='dj'>一级</text>
              </view>
            </view>

          </view>
        </view>
      </view>


    </view>
  </view>

</view>