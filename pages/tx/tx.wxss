/* pages/tx/tx.wxss */
page{
  background: #f6f4f4;
  color: #999999;
}
.tx-one{
  width: 100%;
  height: 100rpx;
  background: white;
  border-bottom: 1px solid #eaeaea;
  margin-top: 20rpx;
  display: flex
}
.tx-one text{
  width: 150rpx;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  font-size: 34rpx;
  padding-left: 10rpx;
  
}
.tx-box{
  width: 100%;
  height: 155rpx;
  border-bottom: 1px solid #eaeaea;
  background: white
}
.tx-box-left{
  width: 50%;
  height: 100%;
  float: left;
  display: flex;
  flex-direction: column
}
.price{
  color: black;
  margin-top: 20rpx;
  margin-left: 10rpx;
  margin-bottom: 20rpx
}
.sxf{
  font-size: 25rpx;
  margin-left: 15rpx
}
.tx-box-right{
  width: 50%;
  height: 100%;
  float: right;
  display: flex;
  flex-direction: column;
}
.rq{
  font-size: 30rpx;
  float: right;
  display: block;
  margin-left: 130rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx
}
.a{
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  display: block;
  background: #f6f5f5;
  border-radius: 9rpx;
  font-size: 30rpx;
  float: right;
  margin-left: 220rpx
}

.on{
  color: #6db9b5
}